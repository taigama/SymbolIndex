    function commitTags() {
        $("#modal").modal('show');
        var symbolsDatas = [];
        $.each($('#list').children(), function (i, child) {
            symbolsDatas.push( {
                Sid: $('#sid_' + i).html(),
                OName: $('#sname_' + i).html(),
                Content: $('#content_' + i).html(),
                Tags: $('#tags_' + i).val()
            });
        });

        $.ajax({
            url: "/Admin/CommitTags?fontId=@fontCurrent.Id",
            type: "POST",
            data: JSON.stringify ({ viewSymbols: symbolsDatas }),
            dataType: 'html',
            traditional: true,
            success: function (data) {
                $('#table_content').html(data);
                alert("cập nhật tags thành công");
                $("#modal").modal('hide');
            },
            error: function (err) {
                showError(err);
                alert(err.statusText);
                $("#modal").modal('hide');
            }
        });         
    }

    function removeSymbol(id) {

        var okMen = confirm("Bạn có chắc muốn xoá ký tự mã: " + id + " ?");
        if (!okMen)
            return;

        $("#modal").modal('show');
        $.ajax({
            url: "/Admin/DeleteSymbol/" + id,
            type: "POST",
            dataType: 'html',
            traditional: true,
            success: function (data) {
                $('#table_content').html(data);

                //alert("đã xoá symbol mã: " + id);
                $("#modal").modal('hide');
            },
            error: function (err) {
                showError(err);
                alert(err.statusText);
                $("#modal").modal('hide');
            }
        });         
    }

    function clearFontSymbols() {
        $("#modal").modal('show');
