
@{
    ViewBag.Title = "Bảng điều khiển";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}


<h2>Danh sách phản hồi</h2>

<div class="row">
    <div class="col-lg-12">

        <div class="row">
            <div class="col-lg-12">
                <!-- Breadcrumb-->
                <nav aria-label="breadcrumb" role="navigation" style="margin-top: 20px">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item active" aria-current="page">@ViewBag.Title</li>
                    </ol>
                </nav>
                <!-- End Breadcrumb-->
            </div>
        </div>
        <div class="panel panel-default">
            <div class="panel-heading" style="background-color:rgb(1, 85, 180); color:aliceblue">
                <i class="fa fa-file-text fa-fw"></i> Danh sách phản hồi
            </div>

            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <div style="height:38px;overflow: hidden; overflow-y:scroll;" id="div_head">
                        @* ---- table head ----*@
                        <table class="table table-striped table-bordered" style="margin-bottom:0">
                            <thead id="thead">
                                <tr>
                                    <th style="width:10%">
                                        Mã
                                    </th>
                                    <th style="width:75%">
                                        Nội dung
                                    </th>
                                    <th style="width:15%"></th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                    @* ---- table body ----*@
                    <div style="height:300px;overflow: hidden; overflow-y:scroll;" id="div_table">
                        <table class="table table-striped table-bordered table-hover" id="table_content">
                            @Html.Partial("_ListFeedback")
                        </table>
                    </div>
                    @* bottom line*@



                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>


    </div>
</div>


<div class="modal fade" id="modal">
    <div class="modal-dialog" role="dialog">
        <div class="modal-content">

            <div class="panel panel-default" style="margin-bottom:0">
                <div class="panel-heading" style="background-color:rgb(1, 180, 85); color:aliceblue">
                    <i class="fa fa-file-text fa-fw"></i> Thông tin phản hồi
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div id="txt" style="width:100%;white-space:pre-wrap;border-width:1px"></div>
                    <div style="text-align:center">
                        <button class="btn btn-primary" data-dismiss="modal">Đóng</button>
                    </div>                    
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/Assets/js/jquery-3.3.1.min.js"></script>
<script>
    $('#div_head').height($('#thead').height() + 1);    

    function showFeed(id) {
        $('#txt').html($('#' + id).html());
        $('#modal').modal('show');
    }
</script>