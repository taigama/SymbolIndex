    <div id="font_id" class="hidden">0</div>
    <div class="container" style="margin-top: 50px">

        <style>
        @@font-face {
            font-family: myFont;
            src: url(@ViewBag.FontUrl);
        }
        </style>

        <select id="ddl_font" name="ddl_font"
                class="selectpicker" data-live-search="true">
            @foreach (var font in fonts)
        {
            <option value="@font.Id">@font.FontName</option>
    }
        </select>

        <div class="row row-padding-top">
            @foreach (var symbol in symbols)

        {
            <div class="symbol-container">
                <div class="symbol-area">
                    <div class="symbol">
                        <font size="8" face="myFont">@symbol.Content</font>
                    </div>

                    <div class="key">
                        @if (symbol.Tags != null && symbol.Tags.Count > 0)
                    {
                        <text>@symbol.Tags.ElementAt(0).TagString</text>
                }
                        @if (symbol.Tags.Count > 1)
                    {
                        foreach (SymbolIndex.Models.Tag tag in symbol.Tags)
                        {
                            <text>, @tag.TagString</text>
                    }
                }
                    </div>
                </div>
            </div>
    }

        </div>
    </div>

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="~/Assets/js/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/umd/popper.min.js"></script>
